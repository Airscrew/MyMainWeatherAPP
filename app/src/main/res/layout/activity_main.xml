<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/curr_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="curr_city"
        android:textAlignment="center"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/curr_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curr_city"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="curr_temp"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curr_city"
        android:layout_marginStart="10sp"
        android:layout_marginTop="5sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:layout_toEndOf="@id/curr_temp"
        android:text="min_temp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/min_temp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="5sp"
        android:layout_marginBottom="5sp"
        android:layout_toEndOf="@id/curr_temp"
        android:text="max_temp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/atmo_press"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curr_temp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="10sp"
        android:layout_toStartOf="@id/humidity"
        android:text="atmo_press" />

    <TextView
        android:id="@+id/humidity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curr_temp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="20sp"
        android:text="humidity" />

    <TextView
        android:id="@+id/wind_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/curr_temp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="20sp"
        android:layout_toEndOf="@id/humidity"
        android:text="wind_speed" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wind_speed"
        android:layout_centerHorizontal="true"
        android:text="Button"
        android:visibility="invisible" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_below="@id/wind_speed"
        android:layout_marginTop="12sp"
        android:background="?android:attr/listDivider"
        android:backgroundTint="#4a90e2" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider2">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/timerow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
